{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    "declarationMap": true,
    "skipLibCheck": true,
    //  "esModuleInterop": true,
    "resolveJsonModule": true,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["mocha", "chai", "node"],
    "typeRoots": ["src/types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
